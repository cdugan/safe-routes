# LitRoutes Web Application - Configuration Template
# Copy this to .env and modify as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=web_app.py

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Map and Area Configuration
# Format: north, south, east, west (latitude, longitude)
# Default is Duke area (Durham-Chapel Hill, NC)
MAP_BBOX=35.42,35.28,-82.40,-82.55

# API Configuration
ENABLE_OSRM=true
OSRM_URL=https://router.project-osrm.org

# Geocoding
ENABLE_GEOPY=true
NOMINATIM_USER_AGENT=litroutes_app

# Data Caching
CACHE_ENABLED=true
CACHE_DIR=./cache
CACHE_GRAPHS=true

# Performance
GRAPH_CACHE_SIZE=5  # Number of graphs to keep in memory
REQUEST_TIMEOUT=60  # Seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=litroutes.log

# Security (for production)
SECRET_KEY=change-me-in-production
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# CORS Configuration
CORS_ORIGINS=*  # Restrict in production

# Production Server
# Use Gunicorn in production: gunicorn -w 4 -b 0.0.0.0:5000 web_app:app
WORKERS=4
THREADS=2

# Database (if future feature for saving routes)
# DATABASE_URL=sqlite:///litroutes.db

# Analytics (future feature)
# GOOGLE_ANALYTICS_ID=
# SENTRY_DSN=
